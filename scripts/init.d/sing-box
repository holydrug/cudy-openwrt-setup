#!/bin/sh /etc/rc.common

USE_PROCD=1
START=99

PROFILES_FILE="/etc/vless_profiles.json"

start_service() {
    [ -f "$PROFILES_FILE" ] || {
        logger -t sing-box "No profiles file found at $PROFILES_FILE"
        return 1
    }

    # Write profile IDs to temp file to avoid pipe subshell
    # (procd_* calls inside a pipe subshell would be lost)
    grep -o '"id":"[^"]*"' "$PROFILES_FILE" | sed 's/"id":"//;s/"//' > /tmp/sing-box-profiles.tmp

    while read profile_id; do
        config="/etc/sing-box/config_full_vpn_${profile_id}.json"
        [ -f "$config" ] && {
            procd_open_instance "full-vpn-${profile_id}"
            procd_set_param command /usr/bin/sing-box run -c "$config"
            procd_set_param respawn 3600 5 5
            procd_set_param stderr 1
            procd_set_param stdout 1
            procd_close_instance
        }

        config="/etc/sing-box/config_global_except_ru_${profile_id}.json"
        [ -f "$config" ] && {
            procd_open_instance "global-except-ru-${profile_id}"
            procd_set_param command /usr/bin/sing-box run -c "$config"
            procd_set_param respawn 3600 5 5
            procd_set_param stderr 1
            procd_set_param stdout 1
            procd_close_instance
        }
    done < /tmp/sing-box-profiles.tmp

    rm -f /tmp/sing-box-profiles.tmp
}
